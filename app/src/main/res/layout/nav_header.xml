<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_ht"
    android:background="@color/very_very_light_orange"
    android:orientation="vertical"
    android:gravity="bottom"
    android:paddingLeft="@dimen/nav_header_padding"
    android:paddingBottom="@dimen/nav_header_padding">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="@dimen/nav_header_image_size"
        android:layout_height="@dimen/nav_header_image_size"
        android:src="@drawable/baseline_person_24"
        app:civ_border_width="@dimen/nav_header_image_border_width"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:id="@+id/updateName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nav_header_text"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

</LinearLayout>