<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ic_background"
    tools:context=".Activity.QuestionTypeChooserActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/ic_background"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_size">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/very_very_light_orange"
                android:minHeight="?attr/actionBarSize"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />
        </com.google.android.material.appbar.AppBarLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/MainHt"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:background="@drawable/sign_up_btn_bg"
                    android:layout_margin="@dimen/cardview_margin_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/card_view_corner_radius"
                    android:elevation="@dimen/cardview_default_elevation">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/sign_up_btn_bg"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/ChooceOneCatBtn"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/chooseOneCat"
                            android:textSize="@dimen/Sign_btn_textSize"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:id="@+id/ChooceOneCatCV"
                    android:layout_margin="@dimen/cardview_margin_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/card_view_corner_radius"
                    android:elevation="@dimen/cardview_default_elevation">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical">
                        <GridView
                            android:padding="@dimen/Grid_view_Padding"
                            android:layout_marginBottom="@dimen/grid_view_margin_top"
                            android:id="@+id/idGRV1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:horizontalSpacing="@dimen/horizontal_spacing"
                            android:numColumns="2"
                            android:verticalSpacing="@dimen/vertical_spacing" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:background="@drawable/sign_up_btn_bg"
                    android:layout_margin="@dimen/cardview_margin_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/card_view_corner_radius"
                    android:elevation="@dimen/cardview_default_elevation">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/sign_up_btn_bg"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/ChooceOneDiffBtn"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/choose_one_diff"
                            android:textSize="@dimen/Sign_btn_textSize"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:id="@+id/ChooceOneDiffCV"
                    android:layout_margin="@dimen/cardview_margin_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/card_view_corner_radius"
                    android:elevation="@dimen/cardview_default_elevation">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical">
                        <GridView
                            android:padding="@dimen/Grid_view_Padding"
                            android:layout_marginBottom="@dimen/grid_view_margin_top"
                            android:id="@+id/idGRV2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:horizontalSpacing="@dimen/horizontal_spacing"
                            android:numColumns="2"
                            android:verticalSpacing="@dimen/vertical_spacing" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:background="@drawable/sign_up_btn_bg"
                    android:layout_margin="@dimen/cardview_margin_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/card_view_corner_radius"
                    android:elevation="@dimen/cardview_default_elevation">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/sign_up_btn_bg"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/ChooceOneTypeBtn"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/choose_one_type"
                            android:textSize="@dimen/Sign_btn_textSize"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:id="@+id/ChooceOneTypeCV"
                    android:layout_margin="@dimen/cardview_margin_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/card_view_corner_radius"
                    android:elevation="@dimen/cardview_default_elevation">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical">
                        <GridView
                            android:padding="@dimen/Grid_view_Padding"
                            android:layout_marginBottom="@dimen/grid_view_margin_top"
                            android:id="@+id/idGRV3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:horizontalSpacing="@dimen/horizontal_spacing"
                            android:numColumns="2"
                            android:verticalSpacing="@dimen/vertical_spacing" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/AmountCV"
                    android:layout_margin="@dimen/cardview_margin_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/card_view_corner_radius"
                    android:elevation="@dimen/cardview_default_elevation">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical">
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/editView_margin_start"
                            app:hintTextColor="@color/black"
                            android:layout_marginTop="@dimen/editView_margin_top2"
                            android:layout_marginEnd="@dimen/editView_margin_end"
                            android:background="#f8f9fa"
                            android:hint="@string/Enter_your_amount">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_amount"
                                android:textColorHint="@color/black"
                                android:hint="@string/Enter_your_amount"
                                android:inputType="number"
                                android:textColor="@color/black"
                                android:textSize="@dimen/editView_textSize"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:gravity="center"
                    android:id="@+id/letsPlay"
                    android:background="@drawable/sign_in_btn_bg"
                    android:layout_marginLeft="@dimen/btn_margin"
                    android:layout_marginRight="@dimen/btn_margin"
                    android:padding="@dimen/btn_padding"
                    android:layout_marginTop="@dimen/cardview_margin_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/LetsBegin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/Sign_btn_textSize"
                    android:textStyle="bold" />
            </LinearLayout>
    </LinearLayout>
</ScrollView>
